        function addOption(qIdx) {
            const list = document.getElementById(`optionsList_${qIdx}`);
            const oIdx = list.querySelectorAll('.option-item').length;

            const optionHtml = `
                <div class="input-group mb-2 option-item">
                    <div class="input-group-text">
                        <input class="form-check-input mt-0 correct-radio" type="radio" 
                            name="correct_radio_${qIdx}" 
                            onchange="updateCorrectOption(${qIdx}, ${oIdx})">
                        
                        <input type="hidden" id="isCorrect_${qIdx}_${oIdx}" 
                            name="SurveyRequest.Questions[${qIdx}].Options[${oIdx}].IsCorrect" value="false" />
                    </div>
                    
                    <input type="hidden" name="SurveyRequest.Questions[${qIdx}].Options[${oIdx}].Order" value="${oIdx}" />
                    <input type="text" name="SurveyRequest.Questions[${qIdx}].Options[${oIdx}].OptionText" class="form-control" placeholder="Şık metni..." required />
                    <button type="button" class="btn btn-outline-danger" onclick="this.parentElement.remove()">x</button>
                </div>`;
            
            list.insertAdjacentHTML('beforeend', optionHtml);
        }

        function updateCorrectOption(qIdx, oIdx) {
            const allOptionsInQuestion = document.querySelectorAll(`[id^="isCorrect_${qIdx}_"]`);
            allOptionsInQuestion.forEach(input => input.value = "false");

            document.getElementById(`isCorrect_${qIdx}_${oIdx}`).value = "true";
        }

        document.addEventListener("DOMContentLoaded", function() {
            addQuestion();
        });
    </script>
}