@page
@model GasAwareness.UI.Pages.Management.AgeGroupManagement
@{
    Layout = "_ManagementLayout";
    ViewData["Title"] = "AgeGroupManagement";
}

<div class="mt-5">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <input asp-for="Request.Name" type="text" class="form-control" placeholder="Yaş Grubu Adı" aria-label="Name">
                <span asp-validation-for="Request.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-2">
                <input asp-for="Request.MinAge" type="number" class="form-control" placeholder="Minimum Yaş" aria-label="MinAge">
                <span asp-validation-for="Request.MinAge" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <input asp-for="Request.MaxAge" type="number" class="form-control" placeholder="Maksimum Yaş" aria-label="MaxAge">
                <span asp-validation-for="Request.MaxAge" class="text-danger"></span>
            </div>
        </div>
        
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
        </div> 
    </form>     
</div>
<div class="row "></div>

@if (@Model.AgeGroups.Any()){
<div class="row mt-5">
            <div class="col-md-6">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ad</th>
                            <th scope="col">Minimum Yaş</th>
                            <th scope="col">Maksimum Yaş</th>
                            <th scope="col">Eklenme Tarihi</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < @Model.AgeGroups.Count; i++)
                        {
                            <tr>
                                <th scope="row">@(i+1)</th>
                                <td>@Model.AgeGroups[i].Name</td>
                                <td>@Model.AgeGroups[i].MinAge</td>
                                <td>@Model.AgeGroups[i].MaxAge</td>
                                <td>@Model.AgeGroups[i].CreatedAt.ToLocalTime().ToString("HH:mm - dd/MM/yyyy")</td>
                                <td>
                                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Bu yaş grubunu silmek istediğinize emin misiniz?');">
                                        <input type="hidden" name="id" value="@Model.AgeGroups[i].Id" />
                                        <button type="submit" style="width: 120px;" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        }