@page
@model GasAwareness.UI.Pages.Register
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Doğalgaz Farkındalık</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GasAwareness.UI.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"
        integrity="sha384-uO3SXW5IuS1ZpFPKugNNWqTZRRglnUJK6UAZ/gxOX80nxEkN9NcGZTftn6RzhGWE"
        crossorigin="anonymous"></script>
</head>

<body>
    <div>
        @* <div id="login-card" class="card">
        <img class="card-img-top" src="/files/GasAwarenessLogo.png" alt="Logo"
            class="d-inline-block align-text-top me-2">
        <div class="card-body">
            <input type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1">
            <input type="password" class="form-control" placeholder="Şifre" aria-label="Şifre" aria-describedby="basic-addon1">
        </div>
    </div> *@

        <form method="post">
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="p-5 bg-white shadow rounded">
                    <img src="/files/GasAwarenessLogo.png" alt="Logo" width="250" height="250"
                        class="d-inline-block align-text-top me-2">

                    <input asp-for="RegisterDto.Email" type="email" class="form-control" placeholder="Email"
                        aria-label="Email">
                    <span asp-validation-for="RegisterDto.Email" class="text-danger"></span>

                    <div class="input-group mt-2">
                        <input asp-for="RegisterDto.Password" placeholder="Şifre"
                            class="form-control password border-end-0" id="password" class="block mt-1 w-full"
                            type="password" value="" required />
                        <span class="bg-white input-group-text togglePassword" id="">
                            <i data-feather="eye" style="cursor: pointer"></i>
                        </span>
                    </div>

                    <div class="input-group mb-3 mt-2">
                        <input asp-for="RegisterDto.RePassword" placeholder="Şifre Tekrarı"
                            class="form-control password border-end-0" id="repassword" type="password"
                            required />
                        <span class="bg-white input-group-text toggleRePassword" style="cursor: pointer">
                            <i data-feather="eye"></i>
                        </span>
                    </div>

                    <span id="passwordError" class="text-danger small d-none">Şifreler eşleşmiyor</span>

                    <button type="submit" id="register" class="btn btn-outline-primary w-100 mt-2">Kaydol</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        $(document).ready(function () {
            feather.replace({ 'aria-hidden': 'true' });

            function toggleVisibility(selector) {
                $(selector).click(function (e) {
                    e.preventDefault();

                    var input = $(this).closest('.input-group').find('input');
                    var icon = $(this).find('svg');

                    if (input.attr("type") === "password") {
                        input.attr("type", "text");
                        $(this).html(feather.icons["eye-off"].toSvg());
                    } else {
                        input.attr("type", "password");
                        $(this).html(feather.icons["eye"].toSvg());
                    }
                });
            }

            toggleVisibility(".togglePassword");
            toggleVisibility(".toggleRePassword");

            var $password = $("#password");
            var $repassword = $("#repassword");
            var $errorSpan = $("#passwordError");
            var $submitBtn = $("#register");

            function checkPasswords() {
                var pval = $password.val();
                var rpval = $repassword.val();

                if (pval === "" || rpval === "" || pval !== rpval) {
                    if (rpval.length > 0 && pval !== rpval) {
                        $errorSpan.removeClass("d-none");
                        $repassword.addClass("is-invalid");
                    } else {
                        $errorSpan.addClass("d-none");
                        $repassword.removeClass("is-invalid");
                    }

                    $submitBtn.addClass("disabled");
                    $submitBtn.css("pointer-events", "none");
                } else {
                    $errorSpan.addClass("d-none");
                    $repassword.removeClass("is-invalid").addClass("is-valid");
                    $submitBtn.removeClass("disabled");
                    $submitBtn.css("pointer-events", "auto");
                }
            }

            $password.on("input", checkPasswords);
            $repassword.on("input", checkPasswords);

            checkPasswords();
        });
    </script>
</body>


<style>
    #login-card {
        width: 500px;
        height: 500px;
    }

    #dont-have-account {
        text-align: center;
    }
</style>