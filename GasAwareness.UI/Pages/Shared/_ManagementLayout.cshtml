@using GasAwareness.API.Enums
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GasAwareness</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <style>
        body { overflow-x: hidden; }
        
        .sidebar {
            height: 100vh;
            width: 260px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #1a1d20;
            color: #fff;
            padding-top: 20px;
            z-index: 1000;
        }

        .sidebar-brand {
            padding: 0 25px 30px;
            font-size: 1.5rem;
            font-weight: bold;
            color: #0d6efd;
            display: flex;
            align-items: center;
        }

        .nav-link {
            color: #ced4da;
            padding: 12px 25px;
            display: flex;
            align-items: center;
            transition: all 0.3s;
            border-left: 4px solid transparent;
        }

        .nav-link:hover {
            color: #fff;
            background-color: #2c3034;
            border-left: 4px solid #0d6efd;
        }

        .nav-link.active {
            color: #fff;
            background-color: #2c3034;
            border-left: 4px solid #0d6efd;
        }

        .nav-link i {
            margin-right: 12px;
            font-size: 1.2rem;
        }

        .main-wrapper {
            margin-left: 260px; 
            padding: 25px;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .logout-section {
            position: absolute;
            bottom: 20px;
            width: 100%;
        }
    </style>
</head>
<body>

    <aside class="sidebar shadow">
        <div class="sidebar-brand">
            <a href="/">
                <img src="/files/GasAwarenessLogo.png" alt="Logo" width="80" height="80" class="d-inline-block align-text-top me-2">
            </a>
        </div>

        <nav class="nav flex-column">
            @* <a class="nav-link" asp-page="/Index">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a> *@
            
            <a class="nav-link" asp-page="/Management/VideoManagement">
                <i class="bi bi-play-btn"></i> Video Yönetimi
            </a>

            <a class="nav-link" asp-page="/Management/CategoryManagement">
                <i class="bi bi-grid-3x3-gap"></i> Kategori Yönetimi
            </a>

            <a class="nav-link" asp-page="/Management/AgeGroupManagement">
                <i class="bi bi-person-badge"></i> Yaş Grubu Yönetimi
            </a>

            <a class="nav-link" asp-page="/Management/SubscriptionTypeManagement">
                <i class="bi bi-card-checklist"></i> Abonelik Tipi Yönetimi
            </a>

            @if (User.IsInRole(RoleName.Admin))
            {
                <a class="nav-link" asp-page="/Management/SurveyManagement">
                    <i class="bi bi-clipboard-check"></i> Anket Yönetimi
                </a>
            }
        </nav>

        <div class="logout-section border-top border-secondary pt-3">
            <a class="nav-link text-danger" asp-page="/Logout">
                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
            </a>
        </div>
    </aside>

    <main class="main-wrapper">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>